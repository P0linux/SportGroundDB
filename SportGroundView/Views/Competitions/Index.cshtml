@model IEnumerable<SportGroundView.Models.Competition>

@{
    ViewData["Title"] = "Index";
}

<h1>Competitions page</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reward)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompetitionDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParticipantsMaxNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParticipantsNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompetitionType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SportType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reward)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompetitionDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParticipantsMaxNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParticipantsNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompetitionType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SportType.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
